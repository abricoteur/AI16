<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Accueil</title>
  <link rel="stylesheet" href="users/stylesheets/home.css">
  <!-- Latest compiled and minified CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Latest compiled JavaScript -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://kit.fontawesome.com/b8acb67ee8.js" crossorigin="anonymous"></script>
</head>

<body style="background-color: rgb(245, 245, 245);">
  <main>
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #fcfcfc;">
      <div class="container-fluid">
        <a class="navbar-brand" href="#"><img src="img/job-promotion.png">Happy Hire</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item hov title">
              <a class="f-f nav-link active" aria-current="page" href="home">
                <p class="admin">Accueil</p>
              </a>
            </li>
            <li class="nav-item">
              <div class="separator"></div>
            </li>
            <li class="nav-item hov">
              <a class="f-f nav-link active" aria-current="page" href="organization_form">Créer une organisation</a>
            </li>
            <li class="nav-item hov">
              <a class="f-f nav-link active" aria-current="page" href="candidature">Mes candidatures</a>
            </li>
            <li class="nav-item hov">
              <a class="f-f nav-link active" href="profil">Mon Profil</a>
            </li>
            <li class="nav-item">
              <div class="separator"></div>
            </li>
            <li class="nav-item hov">
              <a class="f-f nav-link active login-item" href="logout">Se déconnecter</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="navbar-main-spacer"></div>

    <div class="main-container">

      <div class="f-f title">
        <p>Rechercher un emploi</p>
      </div>

      <hr>

      <div id="searchForm" class="search-container">

        <div class="search-bars">
          <div class="wh"><input placeholder="Quoi ?"></div>
          <div class="wh"><input placeholder="Où ?"></div>
          <div class="search-icon">
            <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>

          </div>
        </div>

        <div class="filters">

          <span class="dropdown-el">
            <input type="radio" name="domaine" value="Y" checked="checked"><label for="sort-X">Domaine d'activité</label>
            <input type="radio" name="domaine" value="Agroalimentaire" id="sort-Agroalimentaire">
            <label for="sort-Agroalimentaire">Agroalimentaire</label>
            <input type="radio" name="domaine" value="Banque/Assurance" id="sort-banque">
            <label for="sort-banque">Banque/Assurance</label>
            <input type="radio" name="domaine" value="Industrie pharmaceutique" id="sort-pharma">
            <label for="sort-pharma">Industrie pharmaceutique</label>
            <input type="radio" name="domaine" value="Informatique / Télécoms" id="sort-info">
            <label for="sort-info">Informatique / Télécoms</label>
            <input type="radio" name="domaine" value="Electronique / Electricité" id="sort-elec">
            <label for="sort-elec">Electronique / Electricité</label>
            <input type="radio" name="domaine" value="Commerce / Distribution" id="sort-commerce">
            <label for="sort-commerce">Commerce / Distribution</label>
          </span>
          

          <span class="dropdown-el">
            <input type="radio" name="salaire" value="Y" checked="checked" id="Y"><label for="sort-X">Estimation du
              salaire</label>
            <input type="radio" name="salaire" value="1500" id="1500"><label for="1500">1500€ +</label>
            <input type="radio" name="salaire" value="1750" id="1750"><label for="1750">1750€ +</label>
            <input type="radio" name="salaire" value="2000" id="2000"><label for="2000">2000€ +</label>
            <input type="radio" name="salaire" value="3000" id="3000"><label for="3000">3000€ +</label>
            <input type="radio" name="salaire" value="5000" id="5000"><label for="sort-1000">5000€ +</label>
            <input type="radio" name="salaire" value="7500" id="7500"><label for="sort-5000">7500€ +</label>
          </span>

        </div>

      </div>

      <hr>

      <div class="spacer"></div>

      <div class="data-table-container">

        <div class="data-table">
          <% offres.forEach((offre)=> { %>


            <div class="data-item">
              <p class="orga-name f-f">
                <%= offre.nom %>
              </p>
              <p class="f-f">
              <p class="job-info"><span class="subtitle">Entreprise : </span>
                <%= offre.entreprise %>
              </p>
              <p class="job-info"><span class="subtitle">Type de metier : </span>
                <%= offre.type_metier %>
              </p>
              <p class="job-info"><span class="subtitle">Lieu : </span>
                <%= offre.lieu %>
              </p>
              <p class="job-info"><span class="subtitle">Contact recruteur : </span>
                <%= offre.responsable %>
              </p>
              <p class="job-info"><span class="subtitle">Salaire : </span>
                <%= offre.salaire %>
              </p>
              <p class="job-info"><span class="subtitle">Description : </span>
                <%= offre.description %>
              </p>
              </p>
              <p>

              <div class="manage-orga-btns">
                <button onclick="window.location.href='offers_details'">Détails</button>
              </div>
            </div>
            <% }) %>

        </div>

      </div>

    </div>

    <div class="navbar-main-spacer"></div>

  </main>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
  <script src="js/dropdown.js"></script>

  <script>
    document.querySelector(".search-icon button").addEventListener("click", function () {
      var quoi = document.querySelector('.search-bars .wh:nth-child(1) input').value;
      var ou = document.querySelector('.search-bars .wh:nth-child(2) input').value;

      var domaine = document.querySelector('input[name="domaine"]:checked').value;
      var salaire = document.querySelector('input[name="salaire"]:checked').value;

      var url = "/home?";

      if (quoi) {
        url += "quoi=" + encodeURIComponent(quoi) + "&";
      }

      if (ou) {
        url += "ou=" + encodeURIComponent(ou) + "&";
      }

      if (domaine !== "Y") {
        url += "domaine=" + encodeURIComponent(domaine) + "&";
      }

      if (salaire !== "Y") {
        url += "salaire=" + encodeURIComponent(salaire);
      }

      // Removes any trailing "&" or "?" from the URL
      url = url.replace(/[&?]$/, "");

      window.location.href = url;
    });

  </script>

</body>

</html>