<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Admin</title>
    <link rel="stylesheet" href="users/stylesheets/offers_management.css">
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/b8acb67ee8.js" crossorigin="anonymous"></script>
  </head>
  <body style="background-color: rgb(245, 245, 245);">
    <main>
      <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #fcfcfc;">
        <div class="container-fluid">
          <a class="navbar-brand"><img src="img/job-promotion.png">Happy Hire</a>

          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item hov title">
                <a class="f-f nav-link active" aria-current="page" href="recruiter"><p class="admin">Recruteur</p></a>
              </li>
              <li class="nav-item">
                <div class="separator"></div>
              </li>

              <li class="nav-item hov">
                <a class="f-f nav-link active" aria-current="page" href="offers_management">Gérer les offres</a>
              </li>
              <li class="nav-item hov">
                <a class="f-f nav-link active" aria-current="page" href="application_management">Voir les candidatures</a>
              </li>
              <li class="nav-item">
                <div class="separator"></div>
              </li>
              <li class="nav-item hov">
                <a class="f-f nav-link active" href="profil">Mon Profil</a>
              </li>
              <li class="nav-item hov">
                <a class="f-f nav-link active login-item" href="/users/logout">Se déconnecter</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>

        <div class="navbar-main-spacer"></div>

        <div class="main-container">

            <div class="f-f title title-container">
              <div>Vos offres</div>
              <div class="new-offer-btn"><a href="offers_form">Nouvelle offre +</a></div>
            </div>

            <hr>

            <div class="search-container">

            

          </div>

            <hr>

            <div class="spacer"></div>

            <div class="data-table-container">
              
              <div class="data-table">
                <% offers.forEach((offer)=> { %>
                <div class="data-item">
                  <p class="orga-name f-f"><%= offer.nom %></p>
                  <p class="f-f">
                    <p class="job-info"><span class="subtitle">Entreprise : </span> <%= offer.entreprise %> </p>
                    <p class="job-info"><span class="subtitle">Lieu : </span><%= offer.lieu %> </p>
                    <p class="job-info"><span class="subtitle">Contact recruteur : </span><%= offer.responsable %> </p>
                    <p class="job-info"><span class="subtitle">Salaire : </span><%= offer.salaire %> </p>
                  </p>
                  <p>

                  <div class="manage-orga-btns">
                      <span class="modify-btn">Modifier &#10138;</span>
                      <span class="delete-btn">Supprimer X</span>
                  </div>
                </div>
                <% }) %>
              </div>
              

              <div class="orga-form-container">
                <% offers.forEach((offer)=> { %>
                <div class="wrapper">
                  <div class="title orga-name-form">
                    <%= offer.nom %>
                  </div>
                  <div class="form">
                     <div class="inputfield">
                        <label>Nom de l'entreprise</label>
                        <input type="text" value="<%= offer.entreprise %>" class="input" readonly="readonly">
                     </div>  
                     <div class="inputfield">
                        <label>Contact du recruteur</label>
                        <input type="text" value="<%= offer.responsable %>" class="input" readonly="readonly">
                     </div>  
                    <div class="inputfield">
                        <label>Lieu</label>
                        <input type="text" value="<%= offer.lieu %>" class="input" readonly="readonly">
                     </div> 
                      <div class="inputfield">
                        <label>Domaine</label>
                        <div class="custom_select">
                          <select>
                            <option value="">Select</option>
                            <option value="male">Informatique / Télécoms</option>
                            <option value="female">Agroalimentaire</option>
                            <option value="male">Electronique / Electricité</option>
                            <option value="female">Commerce / Distribution</option>
                            <option value="female">Banque/Assurance</option>
                            <option value="female">Industrie pharmaceutique</option>
                          </select>
                        </div>
                     </div> 
                      <div class="inputfield">
                        <label>Salaire</label>
                        <input type="text" value="<%= offer.salaire %>" class="input" readonly="readonly">
                     </div> 
                    <div class="inputfield">
                        <label>Description</label>
                        <textarea class="textarea" value="<%= offer.description %>" readonly="readonly"></textarea>
                     </div> 
                    <div class="inputfield">
                      <input type="submit" value="Confirmer les modifications" class="btn">
                    </div>
                  </div>
                </div>
                <% }) %>
              </div>

            </div>

          </div>

          <div class="navbar-main-spacer"></div>

    </main>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="js/dropdown.js"></script>
    <script src="js/forms_visibility.js"></script>

    <% if(offers) { %>
      <script>

        $(".data-item").click(function() {
          $(".wrapper > .form").children().each(function(){
            $(this).find("input").attr("readonly",true);
          })
          $(".btn").css("display", "none");
        })

        $(".modify-btn").click(function(event) {
          event.stopPropagation();
          $(".wrapper > .form").children().each(function(){
            $(this).find("input").attr("readonly",false);
          })
          $(".btn").css("display", "block");
        })

        $(".delete-btn").on("click", function(event) {
          var offersList = <%- JSON.stringify(offers) %>;
          $.post('offers_management/delete',
          {
            id: $(offersList)[$(this).parent().parent().index()].id
          },
          function() {
            location.reload(true);
          });
        })

        $(".btn").on("click", function() {
          var offersList = <%- JSON.stringify(offers) %>;
          var formData = $(this).parent().siblings().find('input');
          var selectData = $(this).parent().parent().find('select');
          console.log(selectData);
          console.log(formData);
          $.post('offers_management/update', 
          { 
            entreprise: $(formData).eq(0).val(),
            responsable: $(formData).eq(1).val(),
            lieu: $(formData).eq(2).val(),
            domaine: $(selectData).val(),
            salaire: $(formData).eq(3).val(),
            description: $(formData).eq(5).val(),
            id: $(offersList)[$(this).parent().parent().parent().index()].id,
          }, 
          function(){
            location.reload(true);
          });
        })
    
      </script>
    <% } %>

  </body>
</html>