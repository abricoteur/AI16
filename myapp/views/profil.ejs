<!DOCTYPE html>
<html lang="fr">

<head>
  <meta charset="UTF-8">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="users/stylesheets/profil.css">
  <title>Happy Hire</title>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #fcfcfc;">
    <div class="container-fluid">
      <a class="navbar-brand"><img src="/img/job-promotion.png">Happy Hire</a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <% profil.forEach((profil)=> { %>

      <div class="navbar-collapse" id="navbarSupportedContent">
        <% if (profil.role=="Candidat" ) { %>
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item hov title">
              <a class="f-f nav-link active" aria-current="page" href="home">
                <p class="admin">Accueil</p>
              </a>
            </li>
            <li class="nav-item">
              <div class="separator"></div>
            </li>
            <li class="nav-item hov">
              <a class="f-f nav-link active" aria-current="page" href="organization_form">Créer une organisation</a>
            </li>
            <li class="nav-item hov">
              <a class="f-f nav-link active" aria-current="page" href="candidature">Mes candidatures</a>
            </li>
            <li class="nav-item">
              <div class="separator"></div>
            </li>
            <li class="nav-item hov">
              <a class="f-f nav-link active" href="profil">Mon Profil</a>
            </li>
            <li class="nav-item hov">
              <a class="f-f nav-link active login-item" href="logout">Se déconnecter</a>
            </li>
          </ul>
          <% } if (profil.role=="Recruteur" ){ %>
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item hov title">
                <a class="f-f nav-link active" aria-current="page" href="recruiter"><p class="admin">Recruteur</p></a>
              </li>
              <li class="nav-item">
                <div class="separator"></div>
              </li>

              <li class="nav-item hov">
                <a class="f-f nav-link active" aria-current="page" href="offers_management">Gérer les offres</a>
              </li>
              <li class="nav-item hov">
                <a class="f-f nav-link active" aria-current="page" href="application_management">Voir les candidatures</a>
              </li>
              <li class="nav-item">
                <div class="separator"></div>
              </li>
              <li class="nav-item hov">
                <a class="f-f nav-link active profil-item" href="profil">Mon Profil</a>
              </li>
            </ul>
            <% } if (profil.role=="Administrateur") {%>
              <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item hov title">
                  <a class="f-f nav-link active" aria-current="page" href="admin"><p class="admin">Administration</p></a>
                </li>
                <li class="nav-item">
                  <div class="separator"></div>
                </li>
                <li class="nav-item hov">
                  <a class="f-f nav-link active" aria-current="page" href="user_management">Gérer les utilisateurs</a>
                </li>
                <li class="nav-item hov">
                  <a class="f-f nav-link active" aria-current="page" href="organization_management">Gérer les organisations</a>
                </li>
                <li class="nav-item">
                  <div class="separator"></div>
                </li>
                <li class="nav-item hov">
                  <a class="f-f nav-link active profil-item" href="profil">Mon Profil</a>
                </li>
                <li class="nav-item hov">
                  <a class="f-f nav-link active login-item" href="logout">Se déconnecter</a>
                </li>
              </ul>
              <% } %>
      </div>
    </div>
  </nav>
  <div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
      <div class="col-md-3 border-right">
        <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5"
            width="150px"
            src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg">
        </div>
      </div>
      <div class="col-md-5 border-right">
        <div class="p-3 py-5">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="text-right">Profil</h4>
          </div>

            <div class="col-md-6">
              <label class="labels">Role</label>
              <input type="text" class="form-control" readonly="readonly" value="<%= profil.role %>">
            </div>
            <form action="/profil/update" method="post" enctype="multipart/form-data">
              <div class="row mt-2">
                <div class="col-md-6">
                  <label class="labels">Nom</label>
                  <input type="text" class="form-control" name="nom" placeholder="Entrer un nom"
                    value="<%= profil.nom %>">
                </div>
                <div class="col-md-6">
                  <label class="labels">Prénom</label>
                  <input type="text" class="form-control" name="prenom" value="<%= profil.prenom %>"
                    placeholder="Entrer un prenom">
                </div>
              </div>
              <div class="row mt-3">
                <div class="col-md-12">
                  <label class="labels">Numéro de téléphone</label>
                  <input type="text" class="form-control" name="tel" placeholder="Entrer un numéro de téléphone"
                    value="<%= profil.tel %>">
                </div>
                <div class="col-md-12">
                  <label class="labels">Email</label>
                  <input type="text" class="form-control" name="email" readonly="readonly" value="<%= profil.email %>">
                </div>
              </div>
              <br>
              <div class="col-md-12">
                <label class="labels">CV</label>
                <input type="file" class="form-control" name="myFile">
                <% if (file) { %>
                  <span>Fichier actuel :</span>
                  <a href="data:application/octet-stream;base64,<%= file.file.toString('base64') %>"
                    download="<%= file.filename %>">
                    <%= file.filename %>
                  </a>
                  <% } %>
              </div>


              <div class="mt-5 text-center">
                <button class="btn btn-primary profile-button" type="submit">Sauvegarder</button>
              </div>
            </form>


        </div>
      </div>
      <% if (profil.role!="Administrateur" ) { %>
        <div class="col-md-3 border-right">
          <div class="p-3 py-5">
            <% if (profil.role!="Recruteur" ) { %>
              <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="text-right">Demande Recruteur</h5>
              </div>
              <form action="/request_role/recruteur" method="post">
                <div class="row mt-3">
                  <div class="col-md-12">
                    <label class="labels">SIREN</label>
                    <input type="text" class="form-control" name="siren" placeholder="Entrer un SIREN">
                  </div>
                </div>
                <div class="mt-5 text-center">
                  <button class="btn btn-primary profile-button" type="submit">Demander à être recruteur</button>
                </div>
              </form>
              <br>
              <hr>
              <% } %>
                <form action="/request_role/admin" method="post">
                  <h5 class="text-right">Demande Administrateur</h5>
                  <div class="mt-5 text-center">
                    <button class="btn btn-primary profile-button" type="submit">Demander à être administrateur</button>
                  </div>
                </form>
          </div>
        </div>
        <% } %>
          <% }) %>

    </div>
</body>

</html>