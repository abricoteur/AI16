  <div class="wrapper">
    <div class="title">
      Créer une organisation
    </div>
    <form action="organization_form/request" method="POST" class="form">
      <div class="inputfield">
        <label>Nom</label>
        <input name="nom" type="text" class="input">
      </div>
      <div class="inputfield">
        <label>SIREN</label>
        <input name="siren" type="text" class="input">
      </div>
      <div class="inputfield">
        <label>Siège social</label>
        <input name="siege_social" type="text" class="input">
      </div>

      <div class="inputfield">
        <label>Message</label>
        <textarea name="message" class="textarea"></textarea>
      </div>

      <div class="inputfield">
        <label>Domaine d'activité</label>
        <div class="custom_select">
          <select name="domaine">
            <option value="">Selectionner</option>
            <option value="Agroalimentaire">Agroalimentaire</option>
            <option value="Banque/Assurance">Banque/Assurance</option>
            <option value="Industrie pharmaceutique">Industrie pharmaceutique</option>
            <option value="Informatique / Télécoms">Informatique / Télécoms</option>
            <option value="Electronique / Electricité">Electronique / Electricité</option>
            <option value="Commerce / Distribution">Commerce / Distribution</option>
          </select>
        </div>
      </div>
      <div class="inputfield">
        <input type="submit" value="Soumettre" class="btn">
      </div>
    </form>
  </div>
</body>

</html>